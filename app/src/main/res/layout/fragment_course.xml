<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp" >

    <TextView
        android:id="@+id/course_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/course_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem" />
    <TextView
        android:id="@+id/course_no_finaltest_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/course_no_finaltest_label"
        android:textAlignment="center"/>
    <LinearLayout
        android:id="@+id/course_have_finaltest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Lá»‹ch thi"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItem"
                android:text="@string/course_finaltest_time_label"/>
            <TextView
                android:id="@+id/course_finaltest_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textAlignment="viewEnd"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItem"
                android:text="@string/course_finaltest_room_label"/>
            <TextView
                android:id="@+id/course_finaltest_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textAlignment="viewEnd"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItem"
                android:text="@string/course_finaltest_type_label"/>
            <TextView
                android:id="@+id/course_finaltest_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textAlignment="viewEnd"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/course_no_scoreboard_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/course_no_scoreboard_label"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/course_have_scoreboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:text="@string/course_have_scoreboard_label"
        android:visibility="gone"/>
</LinearLayout>
